      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.14.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "typescript-eslint": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^10.1.2",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.27.0",
    "next": "^15.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.5.3",
    "vitest": "^3.0.8"
  }
}